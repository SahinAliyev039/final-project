			<a aria-current="page" asp-controller="Reservation" asp-action="Index">reservation</a>
		</li>
		<li class="menu-item">
			<a href="#" class="sub-btn">
				pages <i class="fas fa-angle-down"></i>
			</a>
			<ul class="sub-menu">
				<li class="sub-item"><a aria-current="page" asp-controller="Blog" asp-action="Index">blog</a></li>
				<li class="sub-item"><a aria-current="page" asp-controller="Blog" asp-action="Detail">blog detail</a></li>
				<li class="sub-item"><a aria-current="page" asp-controller="Chef" asp-action="Index">chefs</a></li>
				<li class="sub-item"><a aria-current="page" asp-controller="Fag" asp-action="Index">fag</a></li>
			</ul>
		</li>
		<li class="menu-item">
			<a href="#">shop <i class="fas fa-angle-down"></i></a>
			<ul class="sub-menu">
				<li class="sub-item"><a aria-current="page" asp-controller="Shop" asp-action="Index">shop</a></li>
				<li class="sub-item"><a aria-current="page" asp-controller="Shop" asp-action="Detail">shop details</a></li>
				<li class="sub-item"><a aria-current="page" asp-controller="Shop" asp-action="Cart">shop cart</a></li>
				<li class="sub-item"><a aria-current="page" asp-controller="Shop" asp-action="Checkout">shop checkout</a></li>
			</ul>
		</li>
		<li class="menu-item">
			<a aria-current="page" asp-controller="Contact" asp-action="Index">contact</a>
		</li>
	</ul>

	<!-- header icons -->
	<div class="icons">
		<div class="search-btn-icon">
			<i class="fa-solid fa-user" id="search-btn"></i>


			@if (User.Identity.IsAuthenticated)
			{
				<span>@User.Identity.Name</span>
				<a asp-controller="Account" asp-action="Logout">Logout</a>
			}
			else
			{
				<a asp-controller="Account" asp-action="Login">Login</a>
			}
		</div>
		<div>
			<a asp-controller="Shop" asp-action="Cart">
				<i class="fa solid fa-basket-shopping" id="cart-btn"></i>
			</a>
			<span class="quantity">@Model.Count</span>
			<span style="display: none;" class="quantity2">@Model.Count</span>
		</div>

		<div>
			<i class="fas fa-bars" id="menu-btn"></i>
		</div>
	</div>
	<!-- header search -->
	<div class="search-form">
		<input type="text" id="search-box" placeholder="search here...." />
		<label for="search-box" class="fas fa-search"></label>
	</div>
