	</a>
	<!-- header navbar -->
	<ul class="navbar">
		<li class="menu-item">
			<a aria-current="page" asp-controller="Home" asp-action="Index">home</a>
		</li>
		<li class="menu-item">
			<a href="About" aria-current="page" asp-controller="About" asp-action="Index">about</a>
		</li>
		<li class="menu-item">
			<a aria-current="page" asp-controller="Menu" asp-action="Index">menu</a>
		</li>
