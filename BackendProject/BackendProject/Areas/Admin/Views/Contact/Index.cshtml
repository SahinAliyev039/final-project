@model List<BackendProject.Areas.Admin.ViewModels.ContactViewModel>
@{
	ViewData["Title"] = "Index";
}

<div class="content-wrapper">
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<h4 class="card-title">Contact</h4>
					<div class="table-responsive">
						<a class="btn btn-primary" asp-action="Create">Create</a>

						<table class="table">
							<thead>
								<tr>
									<th>Fullname</th>
									<th>Email</th>
									<th>Subject</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var contact in Model)
								{
									<tr>
										<td>@contact.FullName</td>
										<td>@contact.Email</td>
										<td>@contact.Subject</td>
										<td>
											<a class="btn btn-success" asp-action="Detail" asp-route-id="@contact.Id">Detail</a>
											<a class="btn btn-warning" asp-action="Update" asp-route-id=@contact.Id>Update</a>
											<a class="btn btn-danger" asp-action="Delete" asp-route-id=@contact.Id>Delete</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
