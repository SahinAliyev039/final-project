@using BackendProject.Areas.Admin.ViewModels;
@model ServiceViewModel
@{
	ViewData["Title"] = "Update";
}

<div class="content-wrapper">
	<div class="row">
		<div class="col-md-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<h4 class="card-title">Update Service</h4>
					<p class="card-description">
						Basic form layout
					</p>
					<form class="forms-sample" method="post" enctype="multipart/form-data">
						<div class="form-group">
							<label for="exampleInputEmail1">Number</label>
							<input min="0" class="form-control" asp-for="Number" placeholder="Number" accept="image/*">
							<span asp-validation-for="Number" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label for="exampleInputUsername1">Image</label>
							<input accept=".jpg, .jpeg, .png" class="form-control" asp-for="Image" placeholder="Image" accept="image/*">
							<span asp-validation-for="Image" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label for="exampleInputEmail1">Title</label>
							<input class="form-control" asp-for="Title" placeholder="Title">
							<span asp-validation-for="Title" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label for="exampleInputPassword1">Description</label>
							<input class="form-control" asp-for="Description" placeholder="description">
							<span asp-validation-for="Description" class="text-danger"></span>
						</div>
						<button type="submit" class="btn btn-warning mr-2">Update</button>
						<a class="btn btn-light" asp-action="Index">Cancel</a>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>


