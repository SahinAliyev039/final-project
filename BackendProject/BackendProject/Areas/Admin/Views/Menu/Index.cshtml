@model List<Menu>
@{
	ViewData["Title"] = "Menus Page";
}

<div class="content-wrapper">
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<h4 class="card-title">Menu Products</h4>
					<div class="table-responsive">
						<a class="btn btn-primary" asp-action="Create">Create</a>
						<table class="table">
							<thead>
								<tr>
									<th>Image</th>
									<th>Name</th>
									<th>Price</th>
									<th>Category</th>

								</tr>
							</thead>
							<tbody>
								@foreach (var menu in Model)
								{
									<tr>
										<td>
											<img src="~/assets/images/@menu.Image" />
										</td>
										<td>@menu.Name</td>
										<td>@menu.Price</td>
										<td>@menu.MenuCategory.Name</td>

										<td>
											<a class="btn btn-success" asp-action="Detail" asp-route-id="@menu.Id">Detail</a>
											<a class="btn btn-warning" asp-action="Update" asp-route-id=@menu.Id>Update</a>
											<a class="btn btn-danger" asp-action="Delete" asp-route-id=@menu.Id>Delete</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

