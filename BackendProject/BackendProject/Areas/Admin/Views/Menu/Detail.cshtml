@model Menu
@{
    ViewData["Title"] = "Menu Detail";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-6">
            <div style="width:200px; height:auto">
                <img src="~/assets/images/@Model.Image" style="max-width:100%; max-height: auto" />
            </div>
            <h4>Name: @Model.Name</h4>
            <h4>Price: @Model.Price</h4>

            <a class="btn btn-info" asp-action="Index">Go Back</a>
        </div>
    </div>
</div>
