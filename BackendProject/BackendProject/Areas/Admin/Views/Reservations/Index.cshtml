@model List<Reservation>
@{
	ViewData["Title"] = "Reservation Page";
}
<div class="content-wrapper">
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<h4 class="card-title">Reservations</h4>
					<a class="btn btn-danger" asp-action="DeleteAllReservation">Delete All</a>

					<div class="table-responsive">
						<table class="table">
							<thead>
								<tr>
									<th>Name</th>
									<th>Phone</th>
									<th>Guest Count</th>
									<th>Email</th>

								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Name</td>
										<td>@item.Phone</td>
										<td>@item.PersonCount</td>
										<td>@item.Email</td>
										<td>
											<a class="btn btn-success" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
											@if (ViewBag.Count == 1)
											{
												<a class="btn btn-danger disabled" asp-action="Delete" asp-route-id=@item.Id>Delete</a>
											}
											else
											{
												<a class="btn btn-danger" asp-action="Delete" asp-route-id=@item.Id>Delete</a>
											}
										</td>

									</tr>
								}

							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>
