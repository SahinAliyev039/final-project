@model List<Slider>
@{
	ViewData["Title"] = "Slider Page";
}
<div class="content-wrapper">
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<h4 class="card-title">Slider</h4>

					<div class="table-responsive">
						<a class="btn btn-primary" asp-action="Create">Create</a>
						<table class="table">
							<thead>
								<tr>
									<th>Image</th>
									<th>Name</th>
									<th>Designation</th>

								</tr>
							</thead>
							<tbody>
								@foreach (var sliderItem in Model)
								{
									<tr>
										<td>
											<img src="~/assets/images/@sliderItem.UserImage" />
										</td>
										<td>@sliderItem.UserName</td>
										<td>@sliderItem.Designation</td>
										<td>
											<a class="btn btn-success" asp-action="Detail" asp-route-id="@sliderItem.Id">Detail</a>
											<a class="btn btn-warning" asp-action="Update" asp-route-id=@sliderItem.Id>Update</a>
											@if (ViewBag.Count == 1)
											{
												<a class="btn btn-danger disabled" asp-action="Delete" asp-route-id=@sliderItem.Id>Delete</a>
											}
											else
											{
												<a class="btn btn-danger" asp-action="Delete" asp-route-id=@sliderItem.Id>Delete</a>
											}
										</td>

									</tr>

								}

							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>
